<h1>Pirates</h1>
<div class="pirate">
    <h3><%= @pirate.name %></h3>
    <h4><%= @pirate.weight %></h4>
    <h4><%= @pirate.height %></h4>
</div>



<h1>Ships</h1>
<% @ships.each do |ship| %>
<div class="ship"> 
<p>Name: <%= ship.name %></p>
<p>Type: <%= ship.type %></p>
<p>Booty: <%= ship.booty %></p>
</div><br>
<% end %>

