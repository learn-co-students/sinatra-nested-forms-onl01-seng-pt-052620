<h1>Pirate</h1>

<div class="pirate">
    <h3>Name: <%= @pirate.name %></h3>
    <h4>Weight: <%= @pirate.weight %></h4>
    <h5>Height: <%= @pirate.height %></h5>
</div>

<h2>Display your first ship here</h2>

<% @ships.each_with_index do |ship, index| %>
<div class="ship">
    <% if index == 0 %>
        <p>Name: <%= ship.name %></p>
        <p>Type: <%= ship.type %></p> 
        <p>Booty: <%= ship.booty %></p>
    <% end %>
<% end %>
</div>

<h2>Display your second ship here</h2>

<% @ships.each_with_index do |ship, index| %>
<div class="ship">
    <% if index == 1 %>
        <p>Name: <%= ship.name %></p>
        <p>Type: <%= ship.type %></p> 
        <p>Booty: <%= ship.booty %></p>
    <% end %>
<% end %>
</div>
