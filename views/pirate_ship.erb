<h1>Pirates and their ships!</h1><br>
<h2>Pirate</h2>
<div class="pirate">
    <h3>Name: <%= @pirate.name %></h3>
    <h3>Weight: <%= @pirate.weight %></h3>
    <h3>Height: <%= @pirate.height %></h3>
</div><br>

<h2>Ships</h2>
    <% @ship.each do |ship| %>
        <div class="ship">
            <h3>Name: <%= ship.name %></h3>
            <h3>Type: <%= ship.type %></h3>
            <h3>Booty: <%= ship.booty %></h3><br>
        </div>
    <% end %>